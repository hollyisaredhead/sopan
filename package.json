{
    "name": "sopan",
    "version": "1.0.0",
    "description": "SoPan",
    "main": "server.js",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
        "start:prod": "node server.js",
        "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
        "client": "cd client && npm run start",
        "install": "cd client && npm install",
        "build": "cd client && npm run build",
        "heroku-postbuild": "npm run build"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^4.1.0",
        "nodemon": "^1.18.7"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "bcrypt": "^5.0.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.3",
        "express-jwt": "^6.0.0",
        "helmet": "^3.22.0",
        "if-env": "^1.0.4",
        "jwks-rsa": "^1.8.0",
        "mongoose": "^5.9.9",
        "socket.io": "^2.3.0"
    }
}